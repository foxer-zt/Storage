{% extends 'IrishdashStorageBundle::layout.html.twig' %}
{% block body %}
    <body>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Irishdash's Storage</h2>
            {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
                <div class="bg-success">
                    <h3> Source was send. It's available <a href="{{ flashMessage }}">here</a> .</h3>
                </div>
            {% endfor %}
            <form action="{{ path('irishdash_storage_homepage') }}" method="post" {{ form_enctype(form) }}
                  class="blogger">
                {{ form_errors(form) }}

                {{ form_row(form.name, { 'attr': {'placeholder': 'Name', 'class': 'input-medium form-control'} }) }}
                {{ form_row(form.source, { 'attr': {'placeholder': 'Type source here...', 'rows' : '5', 'class' : 'form-control'} }) }}
                {{ form_row(form.type, { 'attr': {'class': 'form-control'} }) }}

                {{ form_rest(form) }}

                <input type="submit" value="Send" class="btn btn-primary btn-lg btn-block"/>
            </form>
        </div>
    </div>
    </body>
{% endblock %}
